<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/llNav"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:background="@color/colorDivide"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="@+id/llNav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPager2" />

        <RadioGroup
            android:id="@+id/llNav"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/colorBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPager2">


            <RadioButton
                android:id="@+id/rb0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/nav_bottom_selector_0"
                android:drawablePadding="2dp"
                android:text="新闻"
                android:textColor="@color/nav_bottom_color"
                android:textSize="10sp" />


            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/nav_bottom_selector_1"
                android:text="书籍"
                android:textColor="@color/nav_bottom_color"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/nav_bottom_selector_2"
                android:text="文章"
                android:textColor="@color/nav_bottom_color"
                android:textSize="10sp" />


            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/nav_bottom_selector_3"
                android:drawablePadding="2dp"
                android:text="博客"
                android:textColor="@color/nav_bottom_color"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/nav_bottom_selector_4"
                android:drawablePadding="2dp"
                android:text="收藏"
                android:textColor="@color/nav_bottom_color"
                android:textSize="10sp" />
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
